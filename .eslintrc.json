{
  "extends": "airbnb",
  "plugins": ["react"],
  "globals": {
    "React": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "linebreak-style": 0,
    "no-unused-vars": 0,
    "react/jsx-filename-extension": 0,
    "react/prefer-stateless-function": [0, { "ignorePureComponents": true }]
  },
  "env": {
    "browser": true
  }
}
